<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dashboard_action" model="ir.actions.client">
        <field name="name">Dashboard</field>
        <field name="tag">my_module.dashboard</field>
    </record>

    <menuitem id="my_module_menu" name="My Module" sequence="10"/>

    <menuitem id="my_module_menu_item" name="Dashboard" action="dashboard_action" parent="my_module_menu" sequence="10"/>





    <!-- Define the action that triggers the custom card view -->
    <record id="action_contacts_card_view" model="ir.actions.client">
        <field name="name">Contacts Card View</field>
        <field name="tag">my_module.partner_card_view</field>
    </record>

    <menuitem id="menu_contacts_card_view" name="Customer" sequence="20" action="action_contacts_card_view" parent="my_module_menu"/>

    <record id="auth_action" model="ir.actions.client">
        <field name="name">Auth</field>
        <field name="tag">my_module.auth</field>
    </record>
    <menuitem id="menu_auth" name="Auth" sequence="20" action="auth_action" parent="my_module_menu"/>

    <record id="sale_fetch_action" model="ir.actions.client">
        <field name="name">Sale Fetch</field>
        <field name="tag">my_module.sale_search</field>
    </record>
    <menuitem id="menu_sale_search" name="Customer Sales" sequence="20" action="sale_fetch_action" parent="my_module_menu"/>


    <record id="action_todo" model="ir.actions.client">
        <field name="name">Todo List</field>
        <field name="tag">my_module.todo_action</field>
    </record>

    <menuitem id="menu_todo_root" name="Todo" sequence="50" parent="my_module_menu"/>
    <menuitem id="menu_todo_list" name="Todo List" parent="menu_todo_root" action="action_todo"/>

</odoo>
